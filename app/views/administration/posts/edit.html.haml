.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "List", administration_posts_path
      %li= link_to "New", new_administration_post_path
      %li.active= link_to "Edit", edit_administration_post_path(@post)
  .content
    %h2.title
      = @post.subject
    .inner
      = form_for @post, :url => administration_post_path(@post) do |f|
        = f.label "Time Created:"
        = f.datetime_select :created_at, :default => Time.now
        = render :partial => 'form', :locals => {:f => f}
      .actions-bar.wat-cf
        .actions
- content_for :sidebar, render(:partial => 'sidebar', :locals => {:post => @post})