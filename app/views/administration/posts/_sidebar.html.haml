.block
  %h3 Manage tags
  %ul.navigation
    - post.tags.each do |tag|
      = render :partial => 'tag', :locals => {:tag => tag, :post => post}

  .new-tag
    = form_for :tag, :html => {:id => "tag-form"} do |f|
      = f.hidden_field :post_id, :value => post.id
      = f.text_field :name
      = f.submit "Add Tag"
