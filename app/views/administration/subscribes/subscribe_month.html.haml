.block
  .secondary-navigation
    %ul.wat-cf
      %li= link_to 'Total', administration_subscribes_path
      %li.first.active= link_to 'Per month', subscribe_month_administration_subscribes_path
      %li= link_to 'Confirmed', conf_subscribe_administration_subscribes_path
      %li= link_to 'Confirmed per month', conf_sub_month_administration_subscribes_path
  .content
    %h2.title
      Subscribe information
    .inner
      %table.table
        %tr
          %th= "Email"
          %th= "Created at"
        - @month_subs.each do |sub|
          %tr{:class => cycle("odd", "even")}
            %td
              = sub.email
            %td
              = l(sub.created_at, :format => :long)
      .actions-bar.wat-cf
        .actions
      = will_paginate @month_subs
-#- content_for :sidebar, render(:partial => 'search_sidebar')