.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "List", administration_comments_path
      %li.active= link_to "New", new_administration_post_comment_path(@post)
  .content
    %h2.title
      New comment
    .inner
      = form_for @comment, :url => administration_post_comments_path(@post) do |f|
        = render :partial => 'form', :locals => {:f => f, :post => @post}
      .actions-bar.wat-cf
        .actions
- content_for :sidebar, render(:partial => 'sidebar')