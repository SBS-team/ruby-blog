.post
  .post-date
    .post-date-num= @post.created_at.strftime('%d')
    .post-date-month= @post.created_at.strftime('%B')
  .post-like-buttons
    Like
  .post-title-with-btn
    %h2
      =@post.subject
    .posted-by
      %span By
      %b= @post.admin.nick
      %span= "on #{@post.created_at.strftime('%d %b %Y %H:%M')}"
  .post-description
    = raw @post.message
  .post-tags
    - @post.tags.all.each do |tag|
      |
      = link_to tag.name, tags_path(tag.name)
  %g:plusone{:size => "medium"}
  .comments
    %h2
      Comments
    - @post.comments.each do |comment|
      = render :partial => 'comment', :locals => {:comment => comment}
  .clear
  .comments
    %h2
      Leave a comment
    .comment
      = form_for :comment, :url => create_comment_path, :html => {:id => "comment"} do |f|
        %strong
          =f.label :author
          =f.text_field :author, :value => current_admin.try(:nick)
        .avatar
          %span
        .message
          =f.text_area :content
        .submit
          =f.submit :save
          .captcha_field
            = render :partial => "captcha"
          .clear
  .clear
  %center.g_banner
    = render :partial => "banner_big"