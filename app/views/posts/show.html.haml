.post
  .post-date
    .post-date-num= @post.created_at.strftime('%d')
    .post-date-month= @post.created_at.strftime('%B')
  .post-like-buttons
    = render partial: 'posts/social_section', title: 'I wanna share', locals: {post: @post}
  .post-title-with-btn
    %h2
      =@post.subject
    .posted-by
      %span By
      %b= @post.admin.nick
      %span= "on #{@post.created_at.strftime('%d %b %Y %H:%M')}"
  .post-description
    = raw @post.message
  .post-tags
    - @post.tags.all.each do |tag|
      |
      = link_to tag.name, posts_by_tag_path(tag.name)
  .comments
    %ul.tabs
      %li
        %a{href: '#comments'} All comments
      %li
        %a{href: '#fb'} Facebook Comment
      %li
        %a{href: '#addcomment'} Add Comment
    .tabs-content
      %ul
        %li#comments
          - @post.comments.each do |comment|
            .comment
              %strong
                = "#{comment.author} | #{l(comment.created_at, :format => :long)}"
              .avatar
                %span
              .message
                %span
                  = simple_format(comment.content)
        %li#addcomment
          .comment-form
            = form_for :comment, :url => comment_create_path(@post), :html => {:id => 'comment'}, method: :post do |f|
              %strong
                = f.hidden_field :post_id, value: @post.id
                = f.label :author
                = f.text_field :author, :value => current_admin.try(:nick)
              .avatar
                %span
                .message
                  =f.text_area :content
                  .submit
                    .captcha_field
                      = render :partial => 'captcha'
                    =f.submit :save
        %li#fb
          = render partial: 'posts/fb'
  %center.g_banner
    = render :partial => 'banner_big'